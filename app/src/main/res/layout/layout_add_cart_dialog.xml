<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="woowacourse.shopping.view.CounterView" />

        <variable
            name="cartProduct"
            type="woowacourse.shopping.uimodel.CartProductUIModel" />

        <variable
            name="addToCartListener"
            type="woowacourse.shopping.productdetail.AddToCartListener" />

        <variable
            name="productCountClickListener"
            type="woowacourse.shopping.productcatalogue.ProductCountClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="14dp"
        android:paddingVertical="10dp"
        tools:maxHeight="150dp"
        tools:maxWidth="314dp">

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@{cartProduct.product.name}"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="14dp"
            tools:text="[든든] 동원 스위트콘" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@{@string/formatted_price(cartProduct.product.price)}"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_product_title"
            tools:text="99,800원" />

        <woowacourse.shopping.view.CounterView
            android:id="@+id/counterView"
            android:layout_width="126dp"
            android:layout_height="42dp"
            app:cartProductUIModel="@{cartProduct}"
            app:layout_constraintBottom_toTopOf="@id/btn_add_to_cart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_product_title"
            app:productCountClickListener="@{productCountClickListener}" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_to_cart"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/add_to_cart_button_color"
            android:gravity="center"
            android:onClick="@{() -> addToCartListener.onClick(counterView)}"
            android:text="@string/cart_dialog_bt"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
